generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id // Matches Supabase auth.users.id (UUID)
  email        String?   @unique
  name         String?
  userMetadata Json? // Store user_metadata as JSON
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
